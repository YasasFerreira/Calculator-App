<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="1.5in"

        android:layout_gravity="right"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="30pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_700"
                android:onClick="numberEvent"
                android:text="7"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_700"
                android:onClick="numberEvent"
                android:text="8"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_700"
                android:onClick="numberEvent"
                android:text="9"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buclear"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:onClick="clearEvent"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_500"
                android:text="c"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_700"
                android:onClick="numberEvent"
                android:text="4"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:backgroundTint="@color/teal_700"
                android:text="5"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_700"
                android:onClick="numberEvent"
                android:text="6"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buadd"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_500"
                android:onClick="operaterEvent"
                android:text="+"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_700"
                android:onClick="numberEvent"
                android:text="1"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_700"
                android:onClick="numberEvent"
                android:text="2"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_700"
                android:onClick="numberEvent"
                android:text="3"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/busub"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_500"
                android:onClick="operaterEvent"
                android:text="-"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bu0"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_700"
                android:onClick="numberEvent"
                android:text="0"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/budot"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_700"
                android:onClick="numberEvent"
                android:text="."
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bumul"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_500"
                android:onClick="operaterEvent"
                android:text="x"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/budiv"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_500"
                android:onClick="operaterEvent"
                android:text="/"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buequal"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="equalEvent"
                android:backgroundTint="@color/purple_500"
                android:text="="
                android:textColor="@color/black"
                android:textStyle="bold" />

        </TableRow>


    </TableLayout>



</LinearLayout>